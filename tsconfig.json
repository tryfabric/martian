{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "rootDir": ".",
    "outDir": "build",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.json",
    "*.ts"
  ]
}
